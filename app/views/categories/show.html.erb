<p id="notice"><%= notice %></p>
<br>
<div class="row justify-content-center">
  <div class="col-md-8 col-md-offset-2">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Showing Costumer Details</h3>
      </div>
      <div class=card-body>
        <div class="form-group">
          <label class="col-form-label" for="inputDefault">Description:</label>
          <%= text_field_tag nil, @category.description, class:"form-control", id:"readOnlyInput", readonly:"" %>
        </div>

      <div class="card-footer">
        <%= link_to 'Edit', edit_category_path(@category), class:"btn btn-info" %>
        <%= link_to 'Back', categories_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>