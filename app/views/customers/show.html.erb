<p id="notice"><%= notice %></p>

<h2>Customer Details</h2>

  <p>
    <strong>Name:</strong>
    <%= @customer.name %>
  </p>

  <p>
    <strong>Company name:</strong>
    <%= @customer.company_name %>
  </p>

  <p>
    <strong>Document:</strong>
    <%= @customer.document %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @customer.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @customer.phone %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @customer.status %>
  </p>

<h2>Address</h2>

<% @customer.addresses.each do |addresses| %>

  <p>
    <strong>Country:</strong>
      <%= addresses.country %>
  </p>

  <p>
    <strong>State:</strong>
      <%= addresses.state %>
  </p>

  <p>
    <strong>City:</strong>
      <%= addresses.city %>
  </p>

  <p>
    <strong>Neighborhood:</strong>
      <%= addresses.neighborhood %>
  </p>

  <p>
    <strong>Street:</strong>
      <%= addresses.street %>
  </p>

  <p>
    <strong>Number:</strong>
      <%= addresses.number %>
  </p>
<% end %>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
