<%= form_with(model: invoice, local: true) do |form| %>
  <% if invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-form-label" for="inputDefault"><%= form.label :date %></label>
    <%= form.date_field :date, id:"datepicker" %>
  </div>

  <div class="form-group">
    <label class="col-form-label" for="inputDefault"><%= form.label :customer %></label>
    <%= form.text_field :customer, class:"form-control", placeholder:"Customer XPTO..." %>
  </div>

  <div class="form-group">
    <div class="col-2">
    <label class="col-form-label" for="inputDefault"><%= form.label :tax %></label>
      <%= form.text_field :tax, class:"form-control", placeholder:"5.0" %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-4">
        <label class="col-form-label" for="inputDefault"><%= form.label :salesperson %></label>
        <%= form.text_field :salesperson, class:"form-control" %>
        </div>
  </div>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-success btn-sm" %>
  </div>
<% end %>
